@font-face
    font-family: 'Source Sans Pro'
    asset-url: ('fonts/Source_Sans_Pro/SourceSansPro-Regular.ttf')

$messenger-blue: #2998ff

html, body
    margin: 0 0 0 0
    height: 100%
    width: 100%
    background-color: darken(white, 8)
    z-index: 0
#navbar-container
    z-index: 2
    position: fixed
    height: 55px
    width: 100%
    background-color: darken($messenger-blue, 10%)
    display: flex
    align-items: center
    box-shadow: 0 4px 4px rgba(0,0,0,0.35)
    .button
        position: relative
        height: 25px
        width: 25px
        background-size: cover
        cursor: pointer
    .ripple
        z-index: 3
        position: relative
        height: 41px
        width: 41px
        margin: -8px 0 0 -8px
        background-color: #777
        border-radius: 50%
        opacity: 0
        transition: all ease-in-out 0.2s
        &:hover
            opacity: 0.5
    #search-bar
        margin: 0 auto 0 auto
        width: 60%
        height: 30px
        background-color: rgba(191, 191, 191, 0.6)
        text-align: center
        border-radius: 5px
        display: flex
        justify-content: center
        align-items: center
        img
            height: 25px
            width: 25px
        h4
            font: normal normal large helvetica, sans-serif
            color: white
    #conversation-title
        position: absolute
        margin-top: 10px
        left: 50%
        transform: translate(-50%)
        font: normal normal large helvetica, sans-serif
    .button#menu
        margin: 0 auto 0 20px
        background-image: asset-url('messenger/buttons/menu_white.svg')
    .button#settings
        margin: 0 auto 0 50px
        background-image: asset-url('messenger/buttons/settings_white.svg')
    .button#compose
        margin: 0 50px 0 auto
        background-image: asset-url('messenger/buttons/message_white.svg')
    .button#about
        margin: 0 20px 0 auto
        background-image: asset-url('messenger/buttons/info_white.svg')
menu
    z-index: 3
    height: 100%
    width: 300px
    position: fixed
    margin: 0 0 0 -335px
    background-color: white
    padding: 15px
    box-shadow: 3px 0 3px rgba(0,0,0,0.2)
    ul
        list-style: none
        margin: 0
        padding: 0
        #signup-link
            border-bottom: 1px solid transparentize(#888, 0.5)
            cursor: pointer
            img:nth-of-type(1)
                height: 30px
                width: 30px
                margin: auto 20px 12px 20px
        li
            margin: 5px auto 5px auto
            height: 50px
            width: 100%
            display: flex
            justify-content: flex-start
            align-items: center
            em
                font: normal normal 1rem 'Source Sans Pro', sans-serif
            img
                height: 40px
                width: 40px
                border-radius: 50%
                margin-right: 15px
#signup-forum
    display: none
    z-index: 5
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    height: 350px
    width: 450px
    padding: 10px
    background-color: white
    border-radius: 8px
    box-shadow: 0 6px 8px 2px rgba(0,0,0,0.2)
    form
        height: 95%
        margin: 0
        h3
            max-width: 280px
            margin: 20px auto 0 auto
            font: normal normal 1.25rem 'Source Sans Pro', sans-serif
        h4#signup-subtext
            max-width: 200px
            font: normal normal 0.9rem 'Source Sans Pro', sans-serif
            margin: 10px auto 15px auto
        .signup-entry
            font: normal normal 1rem 'Source Sans Pro', sans-serif
            padding: 5px
            margin: 15px auto 0 20px
            height: 1.5rem
            width: 230px
            border: none
            border-bottom: 1px solid #888
            outline: none
            transition: all ease-in 200ms
            &:focus
                border-bottom: 1px solid $messenger-blue
        #signup-submit
            font: normal normal 1.5rem 'Source Sans Pro', sans-serif
            color: mix(#333, darken($messenger-blue, 50), 50)
            padding: 10px
            position: absolute
            top: 78%
            left: 50%
            transform: translate(-50%)
            border: none
            border-radius: 4px
            background-color: #777
            box-shadow: 0 10px 12px -8px rgba(0,0,0,0.15)
            transition: all ease-in-out 0.2s
            &:hover
                box-shadow: 0 16px 18px -11px rgba(0,0,0,0.3)
                transform: translate(-50%, -4px)
            &.enabled
                background-color: $messenger-blue
            &.disabled
                background-color: #777
        #signup-shroud
            height: 200px
            width: 230px
            position: absolute
            z-index: 10
            left: 50%
            top: 76%
            transform: translate(-50%)
    img#close
        position: absolute
        top: 15px
        left: 430px
        height: 20px
        width: 20px
        color: #777
    #closing-shroud
        position: absolute
        z-index: 6
        left: 425px
        top: 10px
        height: 30px
        width: 30px
        background-color: #777
        opacity: 0.7
        border-radius: 50%
        transform-origin: center
        transform: scale(0)
        &.pressed
            animation-name: ripple
            animation-duration: 150ms
            animation-timing-function: ease-in-out
            animation-iteration-count: 1
@keyframes ripple
    0%
        transform: scale(0)
    100%
        transform: scale(1)
